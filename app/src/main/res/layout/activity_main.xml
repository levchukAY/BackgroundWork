<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.artiomlevchuk.myapplication.MainActivity">

    <Button
        android:id="@+id/button_bound_service_binder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Bound service (Binder)"
        app:layout_constraintBottom_toTopOf="@+id/button_bound_service_messenger"
        app:layout_constraintEnd_toEndOf="@+id/button_intent_service"
        app:layout_constraintStart_toStartOf="@+id/button_intent_service"
        app:layout_constraintTop_toBottomOf="@+id/button_intent_service" />

    <Button
        android:id="@+id/button_intent_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Intent Service"
        app:layout_constraintBottom_toTopOf="@+id/button_bound_service_binder"
        app:layout_constraintEnd_toEndOf="@+id/button_started_service"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/button_started_service"
        app:layout_constraintTop_toBottomOf="@+id/button_started_service"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/button_started_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Started service"
        app:layout_constraintBottom_toTopOf="@+id/button_intent_service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/button_bound_service_messenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Bound service (Messenger)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_bound_service_binder"
        app:layout_constraintStart_toStartOf="@+id/button_bound_service_binder"
        app:layout_constraintTop_toBottomOf="@+id/button_bound_service_binder" />

</android.support.constraint.ConstraintLayout>
